            <source src="failes.mp3" type="audio/ogg">
        </audio>
        <script>
            var x = document.getElementById("myAudio1");
            var x2 = document.getElementById("myAudio2");

            function showHint(str) {
                if (str.length == 0) {
                    document.getElementById("txtHint").innerHTML = "";
                    return;
                } else {
                    var xmlhttp = new XMLHttpRequest();
                    xmlhttp.onreadystatechange = function () {
                        if (this.readyState == 4 && this.status == 200) {
                            document.getElementById("txtHint").innerHTML = this.responseText;
                        }
                    };
                    xmlhttp.open("GET", "gethint.php?q=" + str, true);
                    xmlhttp.send();
                }
            }

            function playAudio() {
                x.play();
            }
        </script>
        <div class="col" style="padding: 30px;">
            <h5 id="mainHeading">MedTracker</h5>
            <h3>Medicine Detail:</h3>
            <form id="medicineForm" action="insert.php" method="post">
                <textarea name="start" class="input" id="result" rows="15" cols="40" onkeyup="showHint(this.value)"
                          readonly=""></textarea>
                <input type="hidden" name="name" id="name">
                <input type="hidden" name="dom" id="dom">
                <input type="hidden" name="doe" id="doe">
                <button type="button" id="saveMedicineBtn" class="btn btn-primary mt-2">Save Medicine</button>
            </form>
            <p>Status: <span id="txtHint"></span></p>
        </div>
    </div>
</div>
<div id="textareaBlock"></div>
<script type="text/javascript">
    function onScanSuccess(qrCodeMessage) {
        document.getElementById("result").value = qrCodeMessage;
        var medicineData = qrCodeMessage.split("\n");
        var name = "";
        var dom = "";
        var doe = "";
        for (var i = 0; i < medicineData.length; i++) {
            var parts = medicineData[i].split(":");
            if (parts[0].trim().toLowerCase() === "name") {
                name = parts.slice(1).join(":").trim(); // Join all parts after the first one as name
            } else if (parts[0].trim().toLowerCase() === "dom") {
                dom = parts[1].trim();
            } else if (parts[0].trim().toLowerCase() === "doe") {
                doe = parts[1].trim();
            }
        }
        // Assign the extracted values to the hidden form fields
        document.getElementById("name").value = name;
        document.getElementById("dom").value = dom;
        document.getElementById("doe").value = doe;
    }

    function onScanError(errorMessage) {
        // handle scan error
    }

    var html5QrcodeScanner = new Html5QrcodeScanner(
        "reader", {
            fps: 10,
            qrbox: 220 // Adjusted size to be 5px less than the above code
        }
    );
    html5QrcodeScanner.render(onScanSuccess, onScanError);

    // Add click event listener to the save button
    document.getElementById("saveMedicineBtn").addEventListener("click", function () {
        document.getElementById("medicineForm").submit();
    });
</script>
</body>
</html>
this is index.php <?php

// Establish a database connection
$con = mysqli_connect('localhost', 'root', '', 'qrs');

// Check connection
if (mysqli_connect_errno()) {
    echo "Failed to connect to MySQL: " . mysqli_connect_error();
}

// Prepare the SQL statement
$stmt = $con->prepare("INSERT INTO log (name, dom, doe) VALUES (?, ?, ?)");

// Bind parameters
$stmt->bind_param("sss", $name, $dom, $doe);

// Set parameters and execute the statement
$name = $_POST['name'];
$dom = $_POST['dom'];
$doe = $_POST['doe'];

if ($stmt->execute()) {
    echo "Records inserted successfully.";
} else {
    echo "Error: " . $stmt->error;
}

// Close the statement and connection
$stmt->close();
$con->close();

?>
