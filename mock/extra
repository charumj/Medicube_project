    function onScanSuccess(qrCodeMessage) {
        document.getElementById("result").value = qrCodeMessage;
        var medicineData = qrCodeMessage.split("\n");
        var name = "";
        var dom = "";
        var doe = "";
        for (var i = 0; i < medicineData.length; i++) {
            var parts = medicineData[i].split(":");
            if (parts[0].trim().toLowerCase() === "name") {
                name = parts.slice(1).join(":").trim(); // Join all parts after the first one as name
            } else if (parts[0].trim().toLowerCase() === "dom") {
                dom = parts[1].trim();
            } else if (parts[0].trim().toLowerCase() === "doe") {
                doe = parts[1].trim();
            }
        }
        // Assign the extracted values to the hidden form fields
        document.getElementById("name").value = name;
        document.getElementById("dom").value = dom;
        document.getElementById("doe").value = doe;
    }

    function onScanError(errorMessage) {
        // handle scan error
    }

    var html5QrcodeScanner = new Html5QrcodeScanner(
        "reader", {
            fps: 10,
            qrbox: 220 // Adjusted size to be 5px less than the above code
        }
